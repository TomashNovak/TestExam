<Window x:Class="ExamCSharpTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamCSharpTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="360" MinWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="#32B7E3">
            <TextBlock Text="Товары" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
            <Button x:Name="Back_button" Height="27" Content="Назад"  Width="100" HorizontalAlignment="Right" Margin="0, 0, 16, 0" Click="Back_Click" />
        </Grid>
        <Frame x:Name="MainFrame" Grid.Row="1" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
