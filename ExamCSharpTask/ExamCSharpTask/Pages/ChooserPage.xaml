<Page x:Class="ExamCSharpTask.Pages.ChooserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamCSharpTask.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Категории" Click="Categories_Click"/>
        <Button  Grid.Row="1" Content="Товары" Click="Goods_Click"/>
        <Button  Grid.Row="2" Content="Товары с категориями" Click="GoodsCategories_Click"/>
    </Grid>
</Page>
